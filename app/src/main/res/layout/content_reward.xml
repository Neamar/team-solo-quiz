<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RewardActivity"
    tools:showIn="@layout/activity_reward"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_reward"
        android:scaleType="center"
        />

    <ImageView
        android:id="@+id/rewardIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/reward_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/GG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GG WP!"
        android:textColor="#fff"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rewardIcon"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textSize="32dp"
        />


    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="You arrived #$rank in this challenge and have earned 1350 Riot points. "
        android:textColor="#fff"
        android:textSize="17sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/rank"
        android:layout_below="@id/GG"
        />


    <Button
        android:id="@+id/leaderboard"
        android:layout_width="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Back to leaderboard"
        android:background="@color/colorButtonBackground"
        android:textColor="#fff"
        android:layout_margin="16dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_below="@id/rank"
        />
</RelativeLayout>